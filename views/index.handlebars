<div class="container">
    <h1>Burgers</h1>
    <img src="../public/assets/img/burger.JPG">
</div><br><br>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Pick a burger to eat!</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h1>{{burger_name}}</h1>
                <button class="devour" data-id="{{id}}" data-newdevoured="{{devoured}}">
                    {{#if devoured}}{{else}}Devour{{/if}}
                </button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Burgers you've devoured</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h1>{{burger_name}}</h1>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div><br><br>

<div class="container">
    <h3>Add a Burger</h3>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="display-4">Burgers</h1>
        </div>
        <div class="row justify-content-center">
            <img src="../assets/img/burger.png">
        </div>
    </div>
</div><br><br>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Pick a burger to eat!</h3><br>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h4>{{id}}. {{burger_name}}</h4>
                <button class="devour" data-id="{{id}}" data-newdevoured="{{devoured}}">
                    {{#if devoured}}{{else}}Devour{{/if}}
                </button>
                <hr><br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Burgers you've devoured:</h3><br>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h4 class = "byeBurgers">{{id}}. {{burger_name}}</h4><br>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div><br>

<div class="container">
    <div class="row justify-content-center">
        <h3>Add a Burger</h3>
    </div>
    <div class="row justify-content-center">
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="ca" name="name">
            </div>
            <div class="row justify-content-center">
                <button type="submit">Add Burger</button>
            </div>
        </form>
    </div>
</div><br><br>
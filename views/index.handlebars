<h1>Burgers</h1>
<img src="../public/assets/img/burger.JPG">

<div class="container">
    <div class="row" "col-md-6">
        <h3>Pick a burger to eat!</h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="row" "col-md-6">
        <h3>Burgers you've devoured</h3>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h3>Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>